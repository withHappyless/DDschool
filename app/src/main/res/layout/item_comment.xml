<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comment_item_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_avatar"/>
    <RelativeLayout
        android:id="@+id/ll_comment_content"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp">
        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/TextViewBody"
            android:text="我是评论"
            android:textStyle="bold"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="16dp"
            android:padding="16dp"
            />
        <TextView
            android:id="@+id/tv_comment_recontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:background="@drawable/shape_recomment"
            android:padding="8dp"
            android:layout_marginTop="-8dp"
            android:text="回复@某同学的评论:"
            android:textStyle="bold"
            android:layout_below="@+id/tv_comment_content"
            android:layout_marginRight="16dp"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>