<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_card_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_avatar"/>

    <!--文本区域-->
    <TextView
        android:id="@+id/tv_content"
        style="@style/TextViewBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我就是我,不一样的二货!"
        android:layout_marginTop="-16dp"
        android:padding="16dp" />

    <!--图片展示-->
    <include
        android:id="@+id/include_status_image"
        layout="@layout/include_status_image"
        android:visibility="gone" />

    <!--操作栏-->
    <LinearLayout
        android:id="@+id/ll_bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/btn_login_normal" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_share_bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_tran2gray_sel"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_share_bottom"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_th_forwarding"
                    />
                <TextView
                    android:id="@+id/tv_share_bottom"
                    style="@style/TextViewBody"
                    android:layout_marginLeft="8dp"
                    android:text="转发"
                    android:textColor="@color/littleBlue" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/btn_login_normal" />

            <LinearLayout
                android:id="@+id/ll_comment_bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_tran2gray_sel"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_comment_bottom"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_card_comment" />

                <TextView
                    android:id="@+id/tv_comment_bottom"
                    style="@style/TextViewBody"
                    android:layout_marginLeft="8dp"
                    android:text="评论"
                    android:textColor="@color/littleBlue" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/btn_login_normal" />

            <LinearLayout
                android:id="@+id/ll_like_bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_tran2gray_sel"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_like_bottom"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_card_like" />

                <TextView
                    android:id="@+id/tv_like_bottom"
                    style="@style/TextViewBody"
                    android:layout_marginLeft="8dp"
                    android:text="点赞"
                    android:textColor="@color/littleBlue" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/btn_login_normal" />

    </LinearLayout>

</LinearLayout>